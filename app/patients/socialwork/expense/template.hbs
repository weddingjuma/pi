{{#modal-dialog
    hideCancelButton=hideCancelButton
    hideUpdateButton=hideUpdateButton
    isUpdateDisabled=isUpdateDisabled
    title=title
    updateButtonAction=updateButtonAction
    updateButtonText=updateButtonText }}
  {{#em-form model=model submitButton=false }}
    {{em-select label="Category" property="category" class="required"
      content=categoryTypes
      prompt=" "
    }}
    {{em-input label="Sources" property="sources"}}
    {{em-input label="Cost" property="cost" class="required"}}
  {{/em-form}}
{{/modal-dialog}}
