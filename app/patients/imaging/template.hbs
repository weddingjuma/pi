<table class="table">
    <tr class="table-header">
        <th>{{t 'labels.date_requested'}}</th>
        <th>{{t 'labels.imaging_type'}}</th>
        <th>Status</th>
        <th>Date Processed</th>
        <th>Result</th>
        <th>{{t 'labels.notes'}}</th>
        <th>{{t 'labels.requested_by'}}</th>
        <th>{{t 'labels.actions'}}</th>
    </tr>
    {{#each patientImaging as |imaging|}}
        <tr {{action "editImaging" imaging}}>
            <td>{{date-format imaging.requestedDate}}</td>
            <td>{{imaging.imagingType.name}}</td>
            <td>{{imaging.status}}</td>
            <td>{{date-format imaging.imagingDate}}</td>
            <td>{{imaging.result}}</td>
            <td>{{imaging.notes}}</td>
            <td>{{imaging.requestedBy}}</td>
            <td>
                {{#if imaging.canEdit}}
                    {{#if canAddImaging}}
                        <button type="button" class="btn btn-default neutral" {{action "editImaging" imaging}}>{{t 'labels.edit'}}</button>
                    {{/if}}
                    {{#if canDeleteImaging}}
                        <button type="button" class="btn btn-default warning" {{action "showDeleteImaging" imaging  bubbles=false }}><span class="octicon octicon-x"></span> Delete</button>
                    {{/if}}
                {{/if}}
            </td>
        </tr>
    {{/each}}
</table>