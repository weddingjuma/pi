<table class="table">
    <tr class="table-header">
        <th>Date</th>
        <th>{{t 'labels.name'}}</th>
        <th>Status</th>
        <th>Prescription</th>
        <th>{{t 'labels.requested_by'}}</th>
        <th>{{t 'labels.actions'}}</th>
    </tr>
    {{#each patientMedications as |medication|}}
        <tr {{action "editMedication" medication}}>
            <td>{{date-format medication.prescriptionDate}}</td>
            <td>{{medication.medicationName}}</td>
            <td>{{medication.status}}</td>
            <td>{{medication.prescription}}</td>
            <td>{{medication.requestedBy}}</td>
            <td>
                {{#if medication.canEdit}}
                    {{#if canAddMedication}}
                        <button type="button" class="btn btn-default neutral" {{action "editMedication" medication}}>{{t 'labels.edit'}}</button>
                    {{/if}}
                    {{#if canDeleteMedication}}
                        <button type="button" class="btn btn-default warning" {{action "showDeleteMedication" medication bubbles=false }}><span class="octicon octicon-x"></span>Delete</button>
                    {{/if}}
                {{/if}}
            </td>
        </tr>
    {{/each}}
</table>
