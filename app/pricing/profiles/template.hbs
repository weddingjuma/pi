{{#item-listing paginationProps=paginationProps }}
  {{#if hasRecords}}
    <table class="table">
      <tr class="table-header">
        <th>{{t 'labels.name'}}</th>
        <th>Discount Amount</th>
        <th>Discount Percentage</th>
        {{#if showActions}}
          <th>{{t 'labels.actions'}}</th>
        {{/if}}
      </tr>
      {{#each model as |profile|}}
        <tr {{action 'editItem' profile}} class="clickable">
          <td class="pricing-profile-name">{{profile.name}}</td>
          <td>{{profile.discountAmount}}</td>
          <td>{{profile.discountPercentage}}</td>
          {{#if showActions}}
            <td>
              {{#if canEdit}}
                <button class="btn btn-default neutral" {{action 'editItem' profile bubbles=false }}>{{t 'labels.edit'}}</button>
              {{/if}}
              {{#if canDelete}}
                <button class="btn btn-default warning" {{action 'deleteItem' profile bubbles=false }}><span class="octicon octicon-x"></span> Delete</button>
              {{/if}}
            </td>
          {{/if}}
        </tr>
      {{/each}}
    </table>
  {{else}}
    <div class="alert alert-info">
      <p>No pricing profiles found. {{#if canAdd}}<a href="#" {{action 'newItem'}}>Create a new record?</a>{{/if}}</p>
    </div>
  {{/if}}
{{/item-listing}}
